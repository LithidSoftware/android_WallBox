<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lithidsw.wallbox"
    android:versionCode="13"
    android:versionName="1.3.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightDarkActionBar" >
        <activity
            android:name="com.lithidsw.wallbox.MainActivity"
            android:label="@string/app_name"
                android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".app.wallpapers.WallpaperDownloadedActivity"
                android:exported="false"/>
        <activity
            android:name=".AboutActivity"
            android:label="@string/main_title_about"
            android:exported="false"/>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/settings_title"
                android:exported="false"/>
        <activity
                android:name="com.lithidsw.wallbox.app.wallpapers.ApplyWallpaperActivity"
                android:label="@string/settings_title"
                android:theme="@style/AppThemeDialog"
                android:exported="false"/>
        <activity
                android:name="com.lithidsw.wallbox.app.wallsnap.WallSnapActivity"
                android:label="@string/main_title_wallsnap"
                android:screenOrientation="sensor"
                android:exported="false"/>
        <receiver android:name="com.lithidsw.wallbox.ActionReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
                <action android:name="com.lithidsw.wallbox.UPDATE_RANDOMIZER_WALL" />
                <action android:name="com.lithidsw.wallbox.UPDATE_SATURATE_WALL"/>
                <action android:name="com.lithidsw.wallbox.CHECK_WALLPAPER_UPDATES"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.lithidsw.wallbox.app.wallpapers.receiver.DownloadReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
